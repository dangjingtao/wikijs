{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2018", // Node.js 10
        "lib": [
            "es2018"
        ],
        "types" : [ "node", "jest" ],
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "useUnknownInCatchVariables": false
    },
    "include": [
        "source"
    ],
    "typedocOptions": {
        "exclude": ["**/node_modules/**"],
        "mode": "modules",
        "out": "docs"
    }
}